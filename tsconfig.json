{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "allowJs": false,
    "skipLibCheck": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2015", "ES6", "ES2017", "DOM"]
  },
  "compileOnSave": true
}
